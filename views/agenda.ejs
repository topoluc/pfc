<title><%= title %></title>

<div class="row" style="margin-right: 50px; margin-left: 50px;">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Listar Agenda</h3>
		</div>
		
		<a href="/ordenes/new" class="btn btn-default" role="button" data-toggle="tooltip" title="Crear orden"><span class="glyphicon glyphicon-plus-sign"></span></a>
		
		<table class="table text-center">
			<thead>
				<tr>
					<th class="col-md-1 text-center">Num.</th>
					<th class="col-md-1 text-center">Carretera</th>
					<th class="col-md-2 text-center">Denominación</th>
					<th class="col-md-1 text-center">PK ini.</th>
					<th class="col-md-1 text-center">PK fin</th>
					<th class="col-md-2 text-center">Fecha ini.</th>
					<th class="col-md-2 text-center">Fecha est. fin</th>
					<th class="col-md-2 text-center"></th>
				</tr>
			</thead>
			<tbody>
				<% for(var i=0; i < ordenes.length; i++) {
						var color;
						if (ordenes[i].estado == "Cerrada") {
							color ="cerrada";
						} else if (ordenes[i].estado == "En curso") {
							color = "abierta";
						} else {
							color = "fuera";
						}%>
				<tr class="<%= color %>">
					<td class="col-md-1"><%= ordenes[i].num %></td>
					<td class="col-md-1"><%= ordenes[i].matricula %></td>
					<td class="col-md-2"><%= ordenes[i].denom %></td>
					<td class="col-md-1"><%= ordenes[i].pkini %></td>
					<td class="col-md-1 align-middle"><%= ordenes[i].pkfin %></td>
					<td class="col-md-2"><%= ordenes[i].f_ini %></td>
					<td class="col-md-2"><%= ordenes[i].f_estimada %></td>
					<td class="col-md-2">
						<a href="/ordenes/<%= ordenes[i].num %>" data-toggle="tooltip" title="Mostrar orden"><span class="glyphicon glyphicon-eye-open">&nbsp</span></a>
						<a href="#" data-toggle="tooltip" title="Actualizar orden"><span class="glyphicon glyphicon-pencil">&nbsp</span></a>
						<a href="#" data-toggle="tooltip" title="Eliminar orden"><span class="glyphicon glyphicon-trash">&nbsp</span></a>
						<a href="#" data-toggle="tooltip" title="Ver en mapa"><span class="glyphicon glyphicon-map-marker">&nbsp</span></a>
						<a href="#" data-toggle="tooltip" title="Cerrar orden"><span class="glyphicon glyphicon-saved">&nbsp</span></a>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
		 
	</div>
	<nav aria-label="Page navigation">
		<ul class="pagination">
			<li><a href="#" aria-label="Previous">Anterior</a></li>
			<li><a href="#">1</a></li>
			<li><a href="#" aria-label="Next">Siguiente</a></li>
		</ul>
	</nav>
</div>

<!-- Footer -->
<div class="footer">
	<div class="container-fluid">
		<p class="text-center text-muted">© Alberto Henche Gómez - 2017</p>
	</div>
</div>